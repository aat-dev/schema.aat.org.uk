{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.aws.aat.org.uk/v1/business/Payment.json",
    "title": "Payment",
    "description": "Payment",
    "type": "object",
    "required": ["paymentId", "reason", "payingCustomer", "totalAmount",  "status"],
    "additionalProperties": false,
    "properties": {
        "paymentId": {
            "type": {
                "$ref": "http://schema.aws.aat.org.uk/v1/base/UUID.json"
            }
        },
        "adjustmentType": {
            "type": "string",
            "maxLength": 100
        },
        "reason": {
            "type": "string",
            "maxLength": 100
        },
        "refundMethod": {
            "type": "string",
            "enum": ["Card", "Cheque", "BACS"]
        },
        "payingCustomer": {
            "type": {
                "$ref": "http://json-schema.org/v1/business/common/CustomerId.json"
            }
        },
        "totalAmount": {
            "type": "number",
            "maximum": 1000000000,
            "maxInclusive": true
        },
        "invoices": {
            "type": "array",
            "minItems": 0,
            "maxItems": 10,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "required": ["number", "amount"],
                "additionalProperties": false,
                "properties": {
                    "number": {
                        "type": "string"
                    },
                    "amount": {
                        "type": "string",
                        "maximum": 1000000000,
                        "maxInclusive": true

                    }
                }
            }
        },
        "creditCard": {
            "$ref": "http://schema.aws.aat.org.uk/v1/business/common/CreditCardPayment.json"
        },
        "status": {
            "type": "string",
            "enum": ["Pending", "Awaiting Approval from DataCash", "Awaiting Approval", "Approved", "Rejected"]
        },
        "additionalInformation": {
            "type": "string",
            "maxLength": 1000
        },
        "approvingUser": {
            "type": "string",
            "maxLength": 1000
        },
        "approvalDdate": {
            "type": {
                "#ref": "http://schema.aws.aat.org.uk/v1/base/AATDate.json"
            }
        },
        "rejectionReason": {
            "type": "string",
            "maxLength": 1000
        }
    }

}
